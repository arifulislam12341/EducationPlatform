
@{
    ViewBag.Title = "M_MentorRatings";
}
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title></title>
</head>
<body>
    <center>
        <h2 class="fw-bolder text-uppercase">MentorRatings</h2>

        <form action="" method="">

            <table class="table table-hover table-bordered fw-bolder text-uppercase">
                <tr class="table-info shadow text-center text-uppercase fw-bolder">

                    <th>COMMENT ID</th>
                    <th>STUDENT NAME</th>
                    <th scope="col">Comments</th>


                </tr>

                @foreach (var p in Model)
                {

                    <tr class="text-center  fw-bolder">
                        <td> @p.Id</td>


                        <td>Anonymous</td>




                        <td>@p.Comment</td>


                    </tr>



                }
            </table>

        </form>
        </center>
</body>
</html>

@{
    ViewBag.Title = "M_MentorAllStudentResults";
}
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title></title>
</head>
<body>
    <center>
        <h2 class="fw-bolder text-uppercase">AllStudentResults</h2>

        <table class="table table-hover">
            <thead>
                <tr class="table-info shadow text-center text-uppercase fw-bolder">

                    <th scope="col">STUDENT ID</th>
                    <th>
                        ASSIGNMENT ID
                    </th>
                    <th scope="col">MARKS</th>
                    <th scope="col">COURSENAME</th>
                    <th>STATUS</th>


                </tr>
            </thead>
            <tbody class="table-group-divider">

                @foreach (var p in Model)
                {
                    <tr class="text-center  fw-bolder">

                        <td>@p.StudentId</td>
                        <td>@p.AssignmentId</td>
                        <th scope="row">@p.Mark</th>
                        <th scope="row">@p.CourseName</th>
                        <th>@p.BackResult</th>
                        <th>
                            <a class="btn btn-success  text-uppercase fw-bolder" href="~/M_Mentor/M_MentorReturnResult/@p.Id" role="button">RETURN RESULT</a>
                            <a class="btn btn-warning  text-uppercase fw-bolder" href="~/M_Mentor/M_MentorNotReturnResult/@p.Id" role="button">NOT RETURN RESULT</a>

                        </th>

                    </tr>
                }
</table>
    </center>
</body>
</html>
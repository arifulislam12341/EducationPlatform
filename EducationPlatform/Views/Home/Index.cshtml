
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nike Shop</title>
    <!-- font awesome -->
    <script src="https://kit.fontawesome.com/41cf8ffc64.js" crossorigin="anonymous"></script>
    <!-- bootstarp css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
    <header class="">
        <!-- nav bar started -->

        <header id="home">
            <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
                <div class="container">
                    <a class="navbar-brand" href="#">
                        <img width="291" class="img-fluid" src="icons/Logo.png" alt="">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <div class="m-3">
                                    <a class="btn btn-primary" href="#" role="button">Home</a>
                                </div>
                            </li>
                            <li class="nav-item">
                                <div class="m-3"><a class="btn btn-primary" href="#" role="button">Student Login</a></div>
                            </li>
                            <li class="nav-item">
                              
                                <!--Drop down add-->
                                <div class="dropdown show m-3">
                                    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Others
                                    </a>

                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <a class="dropdown-item" href="#">Mentor</a>
                                        <a class="dropdown-item" href="#">Institution</a>
                                        <a class="dropdown-item" href="~/Admin/AdminLogin">Admin</a>
                                    </div>
                                </div>
                            </li>
                            

                        </ul>

                    </div>
                </div>
            </nav>
            <!-- banner started -->
            <section class="container mt-5">
                <!-- <div class="d-flex  justify-content-around align-items-center"> -->
                <div class="row  justify-content-around align-items-center">
                    <div class="col-lg-5 ps-5">
                        <img width="863" class="img-fluid" src="https://images.unsplash.com/photo-1522202176988-66273c2fd55f?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1771&q=80" alt="">
                    </div>
                    <div class="col-lg-4">
                        <h1 class="fw-bold">Welcome To ABC Education</h1>
                        <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry</p>

                        <button type="button" class="btn btn-primary">
                            <i class="fas fa-shopping-cart"></i>
                            Register Now
                        </button>
                    </div>
                </div>
            </section>
        </header>

        <!-- main started -->
        <main>
            <!-- Casual Shoes -->
            <section class="container mt-5">
                <div>
                    <h2>Our Courses</h2>
                    
                    <div class="row row-cols-1 row-cols-md-3 g-4">
                        @foreach (var i in Model){
                            <div class="col">
                                <div class="card h-100 bg-white p-3 rounded-3 ">
                                    <div class="">
                                        <div class="bg-warning">
                                            <img style="height:250px; width=100%" src="@i.Photo" class="card-img-top" alt="...">
                                        </div>
                                    </div>

                                    <div class="card-body">
                                        <h5 class="card-title">@i.Name</h5>
                                        <p class="card-text"> @i.Details</p>
                                    </div>
                                    <div class="card-footer bg-white border-0 d-flex justify-content-between">
                                        <h3>@i.Price</h3>
                                        <button type="button" class="btn btn-primary">Join Class Now</button>
                                    </div>
                                </div>
                            </div>
                        }


                        




                    </div>

                </div>

            </section>

         
        </main>
        <!-- footer started -->
        <footer class="text-center  mt-5 bg-dark">
            <p class="fs-4 text-white" ><small>©2022. All Right Reserved By Noor </small></p>
        </footer>
        <!-- bootstrap js -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>


</html>

